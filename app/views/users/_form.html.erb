    </div>
  <% end %>

  <section class="fields">
    <p class="field">
      <%= f.label :email %>
      <span class="value">
        <%= f.text_field :email %>
      </span>
    </p>
    <p class="field">
      <%= f.label :password %>
      <span class="value">
        <%= f.password_field :password %>
      </span>
    </p>
    <p class="field">
      <%= f.label :password_confirmation %>
      <span class="value">
        <%= f.password_field :password_confirmation %>
      </span>
    </p>
  </section>
  <p class="actions">
    <%= f.submit %>
  </p>
<% end %>
